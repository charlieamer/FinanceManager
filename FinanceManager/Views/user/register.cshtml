@model FinanceManager.User

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-horizontal" method="post" enctype="multipart/form-data">
<fieldset>

<!-- Form Name -->
<legend class="text-center"><h2>Register</h2></legend>

<!-- Username-->
@if (ViewData.ModelState["Username"] != null && ViewData.ModelState["Username"].Errors.Any()) {
  <div class="form-group">
    <div class="col-md-4"></div>
    <div class="col-md-4 text-danger">@ViewData.ModelState["Username"].Errors[0].ErrorMessage</div>
  </div>
}
<div class="form-group">
  <label class="col-md-4 control-label" for="fn">Username</label>  
  <div class="col-md-4">
  <input id="fn" name="username" type="text" placeholder="Username" class="form-control input-md">
  </div>
</div>

<!-- Email-->
@if (ViewData.ModelState["Email"] != null && ViewData.ModelState["Email"].Errors.Any()) {
  <div class="form-group">
    <div class="col-md-4"></div>
    <div class="col-md-4 text-danger">@ViewData.ModelState["Email"].Errors[0].ErrorMessage</div>
  </div>
}
<div class="form-group">
  <label class="col-md-4 control-label" for="email">Email</label>  
  <div class="col-md-4">
  <input id="email" name="Email" type="email" placeholder="Email" class="form-control input-md">
    
  </div>
</div>

<!-- Password -->
@if (ViewData.ModelState["Password"] != null && ViewData.ModelState["Password"].Errors.Any()) {
  <div class="form-group">
    <div class="col-md-4"></div>
    <div class="col-md-4 text-danger">@ViewData.ModelState["Password"].Errors[0].ErrorMessage</div>
  </div>
}
<div class="form-group">
  <label class="col-md-4 control-label" for="pass">Password</label>  
  <div class="col-md-4">
  <input id="pass" name="Password" type="password" placeholder="Password" class="form-control input-md">
  </div>
</div>

<!-- Password again -->
@if (ViewData.ModelState["Password2"] != null && ViewData.ModelState["Password2"].Errors.Any()) {
  <div class="form-group">
    <div class="col-md-4"></div>
    <div class="col-md-4 text-danger">@ViewData.ModelState["Password2"].Errors[0].ErrorMessage</div>
  </div>
}
<div class="form-group">
  <label class="col-md-4 control-label" for="pass2">Password again</label>  
  <div class="col-md-4">
  <input id="pass2" name="Password2" type="password" placeholder="Password again" class="form-control input-md">
  </div>
</div>

<!-- Avatar -->
@if (ViewData.ModelState["ImageFile"] != null && ViewData.ModelState["ImageFile"].Errors.Any()) {
  <div class="form-group">
    <div class="col-md-4"></div>
    <div class="col-md-4 text-danger">@ViewData.ModelState["ImageFile"].Errors[0].ErrorMessage</div>
  </div>
}
<div class="form-group">
  <label class="col-md-4 control-label" for="avatar">Avatar</label>  
  <div class="col-md-4">
  <input id="avatar" name="ImageFile" type="file" placeholder="Avatar" class="form-control input-md">
  </div>
</div>

<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for="submit"></label>
  <div class="col-md-4">
    <button id="submit" name="submit" class="btn btn-primary">SUBMIT</button>
  </div>
</div>

</fieldset>
</form>
